<% provide(:title, @income.income_name) %>
<div class="incomes-form">
  <div class="container">
    <table class="table is-fullwidth is-hoverable">
      <tbody>
        <tr>
          <td colspan="2">
            <%= render 'devise/shared/location_items', location_name: @location.location_name %>
          </td>
        </tr>
        <tr>
          <td><%= l @income.income_day, formats: :short %></td>
          <td><%= @income.income_name %></td>
        </tr>
        <tr>
          <td colspan="2">
            <% if @income.income_money.present? %>
              <%= "#{@income.income_money.to_s(:delimited)}円" %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td colspan="2"><%= @income.income_memo %></td>
        </tr>
        <tr>
          <td><%= l @income.created_at %></td>
          <td></td>
        </tr>
        <tr>
          <td>
            <%= link_to edit_location_income_path(@location, @income) do %>
              編集
            <% end %>
          </td>
          <td></td>
        </tr>
      </tbody>
    </table>
    <%= link_to "戻る", :back, class: "button is-light" %>
  </div>
</div>
